<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/rollBtn"
        android:layout_width="188dp"
        android:layout_height="63dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="159dp"
        android:background="@color/white"
        android:backgroundTint="#D1BAD5"
        android:text="@string/roll"
        android:textAllCaps="false"
        android:textColor="#7199AE"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diceOne" />

    <ImageView
        android:id="@+id/diceOne"
        android:layout_width="145dp"
        android:layout_height="159dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="228dp"
        android:contentDescription="@string/dice1"
        app:layout_constraintEnd_toStartOf="@+id/diceTwo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_dice" />

    <ImageView
        android:id="@+id/diceTwo"
        android:layout_width="145dp"
        android:layout_height="159dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="@string/dice2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty_dice" />
</androidx.constraintlayout.widget.ConstraintLayout>